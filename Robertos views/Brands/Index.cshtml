@model IEnumerable<Group8_iCLOTHINGApp.Models.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>iCLOTHING Brands</h2>



<h3>Look up products by brand</h3>



@using (Html.BeginForm("SearchByBrand", "Brand", FormMethod.Get))
{
    <input type="text" name="brandName" placeholder="Enter brand name" />
    <input type="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.brandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brandDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.brandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brandDescription)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.brandID }) 
            </td>
        </tr>
    }

</table>
