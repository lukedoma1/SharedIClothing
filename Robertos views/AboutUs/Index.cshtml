@model IEnumerable<Group8_iCLOTHINGApp.Models.AboutUs>

@{
    ViewBag.Title = "About Us";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">About Us</h2>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="text-center mb-4">
                <h3 text-center >Who are we? </h3>
                <p>@Html.DisplayFor(modelItem => item.companyBusinessDescription)</p>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Contact Information</h3>
                <p>@Html.DisplayFor(modelItem => item.companyContactInfo)</p>
            </div>
            <div class="col-md-6">
                <h3>Address</h3>
                <p>@Html.DisplayFor(modelItem => item.companyAddress)</p>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Shipping Policy</h3>
                <p>@Html.DisplayFor(modelItem => item.companyShippingPolicy)</p>
            </div>
            <div class="col-md-6">
                <h3>Return Policy</h3>
                <p>@Html.DisplayFor(modelItem => item.companyReturnPolicy)</p>
            </div>
        </div>
    }
</div>

