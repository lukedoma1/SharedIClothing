@model IEnumerable<Group8_iCLOTHINGApp.Models.ShoppingCart>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/SignedInLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Delete and Make New Shopping Cart", "DeleteAndMakeNew")
</p>

<p>
    @Html.ActionLink("Create New Product in Cart", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cartProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cartProductQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.productName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cartProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cartProductQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.productName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.cartID }) |
                @Html.ActionLink("Details", "Details", new { id = item.cartID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.cartID })
            </td>
        </tr>
    }

</table>
