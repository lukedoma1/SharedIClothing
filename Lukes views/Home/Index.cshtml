@{
    ViewBag.Title = "Home Page";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dashboard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .dashboard-item {
        text-align: center;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, background-color 0.3s ease; /* Added background-color transition */
        max-width: 180px;
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .dashboard-item:hover {
            transform: translateY(-5px);
            background: linear-gradient(45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .dashboard-item img {
            max-height: 90%; /* Set a maximum height for the images */
            max-width: 90%; /* Set a maximum width for the images */
            border-radius: 10px;
            margin-bottom: auto; /* Set margin bottom to auto to push the text to the bottom */
        }

        .dashboard-item h2,
        .dashboard-item p {
            margin: 0; /* Reset margin */
            font-size: 25px;
        }

    .aboutUs {
        font-size: 30px;
        font-weight: 400;
        color: #23a6d5;
        text-align: center;
        position: relative; /* Add relative positioning */
        padding: 20px; /* Adjust padding as needed */
    }
</style>

<div class="row">
    <div class="col-md-5 text-center mx-auto">
        <h2 class="aboutUs mb-8">Dashboard</h2>
    </div>
</div>

<div class="dashboard-container">
    <a href="@Url.Action("Index", "BrowseProducts")" class="dashboard-item">
        <img src="../../Pictures/Departments.PNG" alt="Department Image">
        <h2>Browse Products</h2>
    </a>
</div>
